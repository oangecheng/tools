<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:gravity="center"
  android:orientation="vertical">

  <Button
    android:id="@+id/dst_skin_unlock"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:text="@string/dst_skin_unlock" />

  <Button
    android:id="@+id/dst_skin_custom_unlock"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_skin_custom_unlock" />

  <Button
    android:id="@+id/dst_skin_manage"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_skin_manage"
    android:visibility="gone"
    tools:visibility="visible" />

  <Button
    android:id="@+id/dst_skin_user"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_skin_user" />


  <Button
    android:id="@+id/dst_skin_bill"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_skin_bill" />

  <Button
    android:id="@+id/dst_items"
    style="@style/DstBtnStyle"
    android:layout_width="200dp"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="物品管理" />

</LinearLayout>