<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:background="@color/white"
  android:paddingHorizontal="50dp">

  <TextView
    style="@style/DialogTitle"
    android:text="新增配方物品"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <EditText
    android:id="@+id/input_image_id"
    style="@style/DstEditText"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:autofillHints="username"
    android:gravity="start|center_vertical"
    android:padding="10dp"
    android:hint="物品id"
    android:inputType="text" />

  <EditText
    android:id="@+id/input_image_name"
    style="@style/DstEditText"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:autofillHints="username"
    android:gravity="start|center_vertical"
    android:padding="10dp"
    android:hint="物品名称"
    android:inputType="text" />

  <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/input_image_url"
      style="@style/DstEditText"
      android:layout_width="0dp"
      android:autofillHints="username"
      android:gravity="start|center_vertical"
      android:padding="10dp"
      android:layout_weight="3"
      android:hint="物品图片链接"
      android:inputType="text" />

    <Button
      style="@style/DstBtnStyle"
      android:id="@+id/input_image_url_select"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_marginStart="5dp"
      android:text="选择"/>

    <Button
      style="@style/DstBtnStyle"
      android:id="@+id/input_image_url_clear"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_marginStart="5dp"
      android:text="重置"/>

  </LinearLayout>




  <Button
    android:id="@+id/btn_add"
    style="@style/DialogBtnStyleRed"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:text="添加物品" />

  <Button
    android:id="@+id/btn_update"
    style="@style/DialogBtnStyleRed"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:text="查询物品" />

  <Button
    android:id="@+id/btn_delete"
    style="@style/DialogBtnStyleRed"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:text="删除物品" />


  <ImageView
    android:id="@+id/image"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/dst_icon_round"/>

</LinearLayout>