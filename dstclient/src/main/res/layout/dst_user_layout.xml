<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:gravity="center"
  android:orientation="vertical">

  <EditText
    android:id="@+id/skin_id"
    style="@style/DstEditText"
    android:layout_width="@dimen/dst_btn_width_medium"
    android:hint="@string/dst_skin_id_hint" />

  <EditText
    android:id="@+id/userid"
    style="@style/DstEditText"
    android:layout_width="@dimen/dst_btn_width_medium"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:hint="@string/dst_userid_hint" />

  <Button
    android:id="@+id/query"
    style="@style/DstBtnStyle"
    android:layout_width="@dimen/dst_btn_width_medium"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_query" />

  <Button
    android:id="@+id/give_role"
    style="@style/DstBtnStyleRed"
    android:layout_width="@dimen/dst_btn_width_medium"
    android:layout_marginTop="@dimen/dst_vertical_margin_small"
    android:text="@string/dst_skin_give_white_user"
    android:visibility="gone"
    tools:visibility="visible" />

</LinearLayout>