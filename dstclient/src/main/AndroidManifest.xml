<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="com.orange.zax.dstclient"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET" />


  <application
    android:name=".app.DstApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/Theme.Tools" >

    <activity android:name="com.orange.zax.dstclient.pages.DstLoginActivity"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".pages.DstHomeActivity" android:screenOrientation="portrait"/>
    <activity android:name=".pages.BuySkinActivity" android:screenOrientation="portrait"/>
    <activity android:name=".pages.ManageSkinActivity" android:screenOrientation="portrait"/>
    <activity android:name=".pages.UserActivity" android:screenOrientation="portrait"/>
  </application>



</manifest>